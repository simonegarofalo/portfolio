    <Project
      id="project-1"
      image="img-1.jpg"
      title="Progetto 1"
      description="Descrizione del primo progetto"
    />
    <Project
      id="project-2"
      image="img-2.jpg"
      title="Progetto 2"
      description="Descrizione del secondo progetto"
    />
    <Project
      id="project-3"
      image="img-3.jpg"
      title="Progetto 3"
