<section>
  <Service
    id="service-1"
    image="img-1.jpg"
    title="WEB DESIGN"
    description="Descrizione del primo servizio"
  />
  <Service2
    id="service-2"
    image="img-1.jpg"
    title="BRANDING"
    description="Descrizione del secondo servizio"
  />
