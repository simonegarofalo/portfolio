---
const { title, image, id } = Astro.props;
const bgStyle = `background-image: url('${image}')`;
---

<div class="h-[700px] grid grid-cols-12 mb-20">
  <div
    id={id}
    class="bg-green-400 col-start-1 col-end-11 relative brightness-50 transition duration-700 hover:brightness-75 cursor-pointer"
    style={bgStyle}
  >
  </div>
  <div class="col-start-11 col-end-12 relative">
    <h3
      class="text-6xl md:text-7xl absolute top-0 right-0 transform origin-top-right [writing-mode:vertical-rl] cursor-pointer"
    >
      {title}
    </h3>
  </div>
</div>
