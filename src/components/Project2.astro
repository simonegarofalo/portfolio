---
const { title, description, image, id } = Astro.props;
const bgStyle = `background-image: url('${image}')`;
---

<div
  id={id}
  class="col-span-12 lg:col-span-6 flex items-center justify-center bg-cover bg-center bg-no-repeat rounded-xl transition duration-700 hover:brightness-75 cursor-pointer"
  style={bgStyle}
>
  <div class="text-center text-white">
    <h3 class="text-6xl md:text-7xl leading-relaxed">{title}</h3>
    <p>{description}</p>
  </div>
</div>
