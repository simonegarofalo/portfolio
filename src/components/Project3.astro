---
const { title, description, image, id } = Astro.props;
const bgStyle = `background-image: url('${image}')`;
---

<div
  id={id}
  class="col-span-12 lg:col-span-6 flex items-center justify-center relative group bg-cover bg-center bg-no-repeat rounded-xl cursor-pointer"
  style={bgStyle}
>
  <div
    class="absolute inset-0 bg-black/50 transition duration-700 group-hover:bg-black/20 rounded-xl"
  >
  </div>
  <div class="text-center text-white absolute flex flex-col gap-3">
    <a
      href="https://ice-cream-shop-project.netlify.app/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <h3 class="text-2xl lg:text-6xl leading-relaxed lg:mb-2">{title}</h3>
      <p class="text-xs lg:text-xl">{description}</p>
    </a>
  </div>
</div>
